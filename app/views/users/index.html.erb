<div class="container">
    <div class="sideber"></div>
    <div class="iphone">
        <div class="top_header"></div>

        <div class="buttom_header">
            <div class="hormbutton"></div>
        </div>

    </div>
    <div class="home-container">

        <% if user_signed_in? %>

        <div class="user">
            <img src=<%= current_user.image %> class="icon_image">
            <a class="username" href="/users/<%= current_user.id %>"><%= current_user.username %></a>
        </div>
        <hr>
        <h2>トーク</h2>
        <% @users.each do |u| %>
        <% if current_user!=u%>

        <div class="user">
            <img src=<%= u.image %> class="icon_image"><a class="username"
                href="/users/<%= u.id %>"><%= u.username %></a>
        </div>
        <hr>
        <% end %>
        <% end %>
        <%= link_to "ログアウト", destroy_user_session_path, :method => :delete %>
        <% else %>
        <%= link_to "ユーザーを登録する", new_user_registration_path %>
        <br>
        <%= link_to "ログインする", new_user_session_path %>
        <% end %>
    </div>

</div>
